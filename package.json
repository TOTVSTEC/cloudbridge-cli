{
  "name": "cloudbridge",
  "version": "0.0.15-SNAPSHOT",
  "preferGlobal": true,
  "description": "A tool for creating and developing CloudBridge mobile apps.",
  "homepage": "http://www.totvs.com/",
  "bin": {
    "cloudbridge": "index.js",
    "cb": "index.js"
  },
  "scripts": {
    "___postinstall": "node index.js check environment",
    "___prepublish": "npm version patch",
    "___postpublish": "git push --tags",
    "report": "node test/report.js",
    "test": "node ./node_modules/mocha/bin/mocha",
    "test-travis": "istanbul cover jasmine-node --captureExceptions test/ && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",

    "test-coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "test-mocha": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- --bail && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "keywords": [
    "cloudbridge",
    "mobile",
    "app",
    "hybrid"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/totvstec/cloudbridge-cli.git"
  },
  "contributors": [
    {
      "name": "Rogerio Ribeiro da Cruz",
      "email": "rogerio.ribeiro@totvs.com.br"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "archiver": "^1.1.0",
    "bower": "^1.7.9",
    "colors": "1.1.2",
    "ejs": "^2.5.1",
    "inquirer": "^2.0.0",
    "optimist": "0.6.1",
    "progress": "1.1.8",
    "q": "1.4.1",
    "request": "2.74.0",
    "request-progress": "^3.0.0",
    "semver": "^5.3.0",
    "shelljs": "0.7.4",
    "totvs-platform-helper": "^0.0.7",
    "underscore": "~1.8.3",
    "underscore.string": "^3.3.4",
    "unzip": "0.1.11",
    "username": "^2.2.2",
    "winston": "^2.2.0",
    "wiredep": "^4.0.0"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.15",
    "istanbul": "^0.4.5",
    "jasmine-node": "^1.14.5",
    "plato": "^1.7.0"
  }
}
